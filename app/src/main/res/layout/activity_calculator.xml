<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"

    tools:context=".Calculator">
    <TextView
        android:id="@+id/tvsec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:textColor="#f6f6f6"
        android:gravity="bottom"
        android:maxLines="1"
        android:layout_weight="1"
        android:background="#000"
        />
    <TextView
        android:id="@+id/tvmain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text=""
        android:textSize="50sp"
        android:textColor="#f6f6f6"
        android:gravity="bottom"
        android:maxLines="1"
        android:layout_weight="2"
        android:background="#000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/sin"
                        android:text="sin"
                        android:backgroundTint="@color/Sky_blue"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/cos"
                        android:text="cos"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tan"
                        android:text="tan"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/log"
                        android:text="log"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/In"
                        android:text="In"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/sininverse"
                        android:text="sin-1 "
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="12sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/cosinverse"
                        android:text="Cos-1"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="12sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/taninverse"
                        android:text="tan-1"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="12sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/expo"
                        android:text="10^x"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/econstant"
                        android:text="e^x"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/fact"
                        android:text="x!"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/square"
                        android:text="x^2"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/squareroot"
                        android:text="âˆš"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/percentage"
                        android:text="%"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/divide"
                        android:text="Ã·"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b7"
                        android:text="7"
                        android:backgroundTint="@color/back_blue"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b8"
                        android:text="8"
                        android:backgroundTint="@color/back_blue"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b9"
                        android:text="9"
                        android:backgroundTint="@color/back_blue"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/multiply"
                        android:textAllCaps="false"
                        android:text="x"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b4"
                        android:text="4"
                        android:backgroundTint="@color/back_blue"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b5"
                        android:text="5"
                        android:backgroundTint="@color/back_blue"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b6"
                        android:text="6"
                        android:backgroundTint="@color/back_blue"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/minus"
                        android:text="-"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b1"
                        android:text="1"
                        android:backgroundTint="@color/back_blue"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b2"
                        android:text="2"
                        android:backgroundTint="@color/back_blue"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b3"
                        android:text="3"
                        android:backgroundTint="@color/back_blue"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/plus"
                        android:text="+"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/pi"
                        android:text="Ï€"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/back_blue"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/b0"
                        android:text="0"
                        android:backgroundTint="@color/back_blue"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/dot"
                        android:text="."
                        android:backgroundTint="@color/back_blue"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/equals"
                        android:text="="
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ac"
                        android:text="AC"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/clear"
                        android:text="C"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bb1"
                        android:text="("
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bb2"
                        android:text=")"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/binary"
                        android:text="bin"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/octal"
                        android:text="oct"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/hex"
                        android:text="hex"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/div"
                        android:text="1/x"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/Sky_blue"
                        android:textSize="15sp"
                        android:textColor="#ffa500"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>